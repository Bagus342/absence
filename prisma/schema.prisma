generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique @db.VarChar(50)
  password String @db.VarChar(150)
}

model Siswa {
  id          Int          @id @default(autoincrement())
  nis         String       @unique @db.VarChar(100)
  name        String       @db.VarChar(150)
  kelas       String       @db.VarChar(50)
  image       String       @db.VarChar(200)
  phone       String       @db.VarChar(50)
  wali        String       @db.VarChar(150)
  qr_payload  String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  absens      Absen[]
  permissions Permission[]

  @@index([name])
  @@index([kelas])
  @@index([wali])
  @@index([createdAt])
}

model Absen {
  id        Int          @id @default(autoincrement())
  nis       String
  activity  String?      @db.VarChar(150)
  status    StatusAbsen?
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  permission Permission?

  siswa Siswa @relation(fields: [nis], references: [nis], onUpdate: Cascade, onDelete: Cascade)

  @@index([createdAt])
  @@index([activity])
  @@index([status])
}

model Permission {
  id         Int              @id @default(autoincrement())
  absenId    Int  @unique
  nis        String
  image      String
  keterangan Keterangan
  status     StatusPermission
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  siswa Siswa @relation(fields: [nis], references: [nis], onUpdate: Cascade, onDelete: Cascade)
  absen Absen @relation(fields: [absenId], references: [id], onUpdate: Cascade, onDelete: Cascade)

  @@index([createdAt])
  @@index([keterangan])
  @@index([status])
}

model Libur {
  id      Int      @id @default(autoincrement())
  tanggal DateTime

  @@index([tanggal])
}

enum StatusPermission {
  WAITING
  APPROVE
  REJECT
}

enum Keterangan {
  IZIN
  SAKIT
}

enum StatusAbsen {
  ONTIME
  LATE
  PERMISSION
}
